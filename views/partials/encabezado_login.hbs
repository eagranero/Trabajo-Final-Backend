<div style="display:flex; flex-direction: column; align-items: center;">
    
    {{#if login}}
    <h1>Bienvenido {{login}}</h1>
    <img style="width:100px" src={{foto}}>
    <form  action="/login/logout">
        <button>LOGOUT</button>
    </form>
    {{else}}
    <h1>No estas Logeado</h1>
    <form action="/login">
        <button>LOGIN</button>
    </form>
    {{/if}}


    

    
</div>