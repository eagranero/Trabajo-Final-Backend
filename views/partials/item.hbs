<div style="display:flex; flex-direction:row; justify-content:space-around ; flex-wrap:wrap">
     
    <table>
        <thead>
            <tr>
                <th> </th>
                <th>Producto</th>
                <th>Categoria</th>
                <th>Descripcion</th>
                <th>Cantidad</th>
                <th>Precio</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        
        {{#each items}}      
        <tr>
            <td class="centrado"><img  src={{{this.thumbnail}}}></td>
            <td>{{{this.nombre}}}</td>
            <td>{{{this.categoria}}}</td>
            <td>{{{this.descripcion}}}</td>
            <td class="centrado">{{{this.cantidad}}}</td>
            <td class="centrado">${{{this.precio}}}</td>
            <td class="centrado"><form method="post" action="carrito/quitaritem/{{{this._id}}}"><button style="margin-block: 10px;" name="boton" type="submit" placeholder="Quitar del Carrito">Quitar del Carrito</button></form></td>
        </tr>   
        {{/each}}

        
        </tbody>
    </table>

</div>